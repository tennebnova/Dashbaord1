                  <CartesianGrid strokeDasharray="3 3" />
                  <XAxis type="number" />
                  <YAxis dataKey="name" type="category" width={150} />
                  <Tooltip />
                  <Legend />
                  <Bar dataKey="Genesis" fill="#3B82F6" name="Sega Genesis" />
                  <Bar dataKey="SNES" fill="#EF4444" name="Super Nintendo" />
                </BarChart>
              </ResponsiveContainer>
            </CardContent>
          </Card>
        </TabsContent>
        
        {/* Verkaufszahlen Tab */}
        <TabsContent value="sales" className="mt-4">
          <Card>
            <CardHeader>
              <CardTitle>Verkaufszahlen im Vergleich</CardTitle>
              <CardDescription>Verkaufszahlen nach Regionen in Millionen Einheiten</CardDescription>
            </CardHeader>
            <CardContent>
              <ResponsiveContainer width="100%" height={400}>
                <BarChart data={salesData}>
                  <CartesianGrid strokeDasharray="3 3" />
                  <XAxis dataKey="name" />
                  <YAxis />
                  <Tooltip />
                  <Legend />
                  <Bar dataKey="Genesis" fill="#3B82F6" name="Sega Genesis" />
                  <Bar dataKey="SNES" fill="#EF4444" name="Super Nintendo" />
                </BarChart>
              </ResponsiveContainer>
            </CardContent>
          </Card>
        </TabsContent>
        
        {/* Spielebibliothek Tab */}
        <TabsContent value="games" className="mt-4">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <Card>
              <CardHeader>
                <CardTitle>Spielebibliothek im Vergleich</CardTitle>
                <CardDescription>Anzahl und Qualität der verfügbaren Spiele</CardDescription>
              </CardHeader>
              <CardContent>
                <ResponsiveContainer width="100%" height={300}>
                  <BarChart data={gameLibraryData}>
                    <CartesianGrid strokeDasharray="3 3" />
                    <XAxis dataKey="name" />
                    <YAxis />
                    <Tooltip />
                    <Legend />
                    <Bar dataKey="Genesis" fill="#3B82F6" name="Sega Genesis" />
                    <Bar dataKey="SNES" fill="#EF4444" name="Super Nintendo" />
                  </BarChart>
                </ResponsiveContainer>
              </CardContent>
            </Card>
            
            <Card>
              <CardHeader>
                <CardTitle>Kultige Spiele</CardTitle>
                <CardDescription>Die bekanntesten Titel auf beiden Plattformen</CardDescription>
              </CardHeader>
              <CardContent>
                <div className="grid grid-cols-2 gap-4">
                  {iconicGames.map((item, index) => (
                    <div key={index} className={`p-4 rounded-md ${item.console === 'Genesis' ? 'bg-blue-100' : 'bg-red-100'}`}>
                      <h3 className="font-bold mb-2">{item.console}</h3>
                      <ul className="list-disc pl-5">
                        {item.games.map((game, gameIndex) => (
                          <li key={gameIndex}>{game}</li>
                        ))}
                      </ul>
                    </div>
                  ))}
                </div>
              </CardContent>
            </Card>
          </div>
        </TabsContent>
        
