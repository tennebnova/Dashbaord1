import React, { useState } from 'react';
import { BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer } from 'recharts';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';

const ConsoleDashboard = () => {
  const [activeTab, setActiveTab] = useState('specs');
  
  // Technical Specifications
  const specData = [
    { name: 'CPU (MHz)', Genesis: 7.6, SNES: 3.58 },
    { name: 'Graphics Chip (MHz)', Genesis: 13, SNES: 3.58 },
    { name: 'RAM (KB)', Genesis: 64, SNES: 128 },
    { name: 'VRAM (KB)', Genesis: 64, SNES: 64 },
    { name: 'Color Palette', Genesis: 512, SNES: 32768 },
    { name: 'Sprite Size (Pixels)', Genesis: 32, SNES: 64 },
    { name: 'Simultaneous Sprites', Genesis: 80, SNES: 128 },
    { name: 'Resolution', Genesis: 320, SNES: 256 },
  ];
  
  // Sales Figures
  const salesData = [
    { name: 'Worldwide (Millions)', Genesis: 30.75, SNES: 49.1 },
    { name: 'Japan (Millions)', Genesis: 3.58, SNES: 17.17 },
    { name: 'North America (Millions)', Genesis: 16.98, SNES: 23.35 },
    { name: 'Europe (Millions)', Genesis: 8.39, SNES: 8.58 }
  ];
  
  // Game Library
  const gameLibraryData = [
    { name: 'Total Number of Games', Genesis: 913, SNES: 1757 },
    { name: 'Exclusive Titles', Genesis: 700, SNES: 1544 },
    { name: 'Top-Rated Games', Genesis: 150, SNES: 210 }
  ];
  
  // Technical Advantages
  const advantagesGenesis = [
    "Faster processor (7.6 MHz vs. 3.58 MHz)",
    "Better display of fast movements",
    "Higher horizontal resolution (320 vs. 256)",
    "Blast Processing for faster graphics processing"
  ];
  
  const advantagesSNES = [
    "Larger color palette (32,768 vs. 512 colors)",
    "More RAM (128KB vs. 64KB)",
    "Mode 7 for rotation and scaling",
    "Advanced sound chips with DSP"
  ];
  
  // Iconic Games
  const iconicGames = [
    { console: "Genesis", games: ["Sonic the Hedgehog", "Streets of Rage", "Phantasy Star IV", "Gunstar Heroes", "Shining Force II"] },
    { console: "SNES", games: ["Super Mario World", "The Legend of Zelda: A Link to the Past", "Chrono Trigger", "Super Metroid", "Final Fantasy VI"] }
  ];
  
  return (
    <div className="w-full p-4 bg-gray-50">
      <h1 className="text-3xl font-bold text-center mb-6">Sega Genesis vs. Super Nintendo</h1>
      
      <Tabs value={activeTab} onValueChange={setActiveTab} className="w-full">
        <TabsList className="grid w-full grid-cols-4">
          <TabsTrigger value="specs">Technical Specifications</TabsTrigger>
          <TabsTrigger value="sales">Sales Figures</TabsTrigger>
          <TabsTrigger value="games">Game Library</TabsTrigger>
          <TabsTrigger value="advantages">Technical Advantages</TabsTrigger>
        </TabsList>
        
        {/* Technical Specifications Tab */}
        <TabsContent value="specs" className="mt-4">
          <Card>
            <CardHeader>
              <CardTitle>Technical Specifications Comparison</CardTitle>
              <CardDescription>Hardware comparison between Sega Genesis (Mega Drive) and Super Nintendo</CardDescription>
            </CardHeader>
            <CardContent>
              <ResponsiveContainer width="100%" height={400}>
                <BarChart data={specData} layout="vertical">
                  <CartesianGrid strokeDasharray="3 3" />
                  <XAxis type="number" />
                  <YAxis dataKey="name" type="category" width={150} />
                  <Tooltip />
                  <Legend />
                  <Bar dataKey="Genesis" fill="#3B82F6" name="Sega Genesis" />
                  <Bar dataKey="SNES" fill="#EF4444" name="Super Nintendo" />
                </BarChart>
              </ResponsiveContainer>
            </CardContent>
          </Card>
        </TabsContent>
        
        {/* Sales Figures Tab */}
        <TabsContent value="sales" className="mt-4">
          <Card>
            <CardHeader>
              <CardTitle>Sales Figures Comparison</CardTitle>
              <CardDescription>Sales figures by region in millions of units</CardDescription>
            </CardHeader>
            <CardContent>
              <ResponsiveContainer width="100%" height={400}>
                <BarChart data={salesData}>
                  <CartesianGrid strokeDasharray="3 3" />
                  <XAxis dataKey="name" />
                  <YAxis />
                  <Tooltip />
                  <Legend />
                  <Bar dataKey="Genesis" fill="#3B82F6" name="Sega Genesis" />
                  <Bar dataKey="SNES" fill="#EF4444" name="Super Nintendo" />
                </BarChart>
              </ResponsiveContainer>
            </CardContent>
          </Card>
        </TabsContent>
        
        {/* Game Library Tab */}
        <TabsContent value="games" className="mt-4">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <Card>
              <CardHeader>
                <CardTitle>Game Library Comparison</CardTitle>
                <CardDescription>Number and quality of available games</CardDescription>
              </CardHeader>
              <CardContent>
                <ResponsiveContainer width="100%" height={300}>
                  <BarChart data={gameLibraryData}>
                    <CartesianGrid strokeDasharray="3 3" />
                    <XAxis dataKey="name" />
                    <YAxis />
                    <Tooltip />
                    <Legend />
                    <Bar dataKey="Genesis" fill="#3B82F6" name="Sega Genesis" />
                    <Bar dataKey="SNES" fill="#EF4444" name="Super Nintendo" />
                  </BarChart>
                </ResponsiveContainer>
              </CardContent>
            </Card>
            
            <Card>
              <CardHeader>
                <CardTitle>Iconic Games</CardTitle>
                <CardDescription>The most famous titles on both platforms</CardDescription>
              </CardHeader>
              <CardContent>
                <div className="grid grid-cols-2 gap-4">
                  {iconicGames.map((item, index) => (
                    <div key={index} className={`p-4 rounded-md ${item.console === 'Genesis' ? 'bg-blue-100' : 'bg-red-100'}`}>
                      <h3 className="font-bold mb-2">{item.console}</h3>
                      <ul className="list-disc pl-5">
                        {item.games.map((game, gameIndex) => (
                          <li key={gameIndex}>{game}</li>
                        ))}
                      </ul>
                    </div>
                  ))}
                </div>
              </CardContent>
            </Card>
          </div>
        </TabsContent>
        
        {/* Technical Advantages Tab */}
        <TabsContent value="advantages" className="mt-4">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <Card className="bg-blue-50">
              <CardHeader>
                <CardTitle className="text-blue-700">Sega Genesis Advantages</CardTitle>
                <CardDescription>Technical strengths of the Genesis console</CardDescription>
              </CardHeader>
              <CardContent>
                <ul className="list-disc pl-5 space-y-2">
                  {advantagesGenesis.map((advantage, index) => (
                    <li key={index}>{advantage}</li>
                  ))}
                </ul>
              </CardContent>
            </Card>
            
            <Card className="bg-red-50">
              <CardHeader>
                <CardTitle className="text-red-700">Super Nintendo Advantages</CardTitle>
                <CardDescription>Technical strengths of the SNES console</CardDescription>
              </CardHeader>
              <CardContent>
                <ul className="list-disc pl-5 space-y-2">
                  {advantagesSNES.map((advantage, index) => (
                    <li key={index}>{advantage}</li>
                  ))}
                </ul>
              </CardContent>
            </Card>
          </div>
        </TabsContent>
      </Tabs>
      
      <div className="mt-8 text-center text-sm text-gray-500">
        <p>The technical specifications and sales figures are based on historical records from the 16-bit era (1989-1996).</p>
      </div>
    </div>
  );
};

export default ConsoleDashboard;
